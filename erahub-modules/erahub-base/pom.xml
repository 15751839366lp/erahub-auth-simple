<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.erahub</groupId>
        <artifactId>erahub-modules</artifactId>
        <version>1.1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>erahub-base</artifactId>

    <description>
        erahub-base基础模块
    </description>

    <dependencies>

        <!-- SpringCloud Alibaba Nacos -->
        <dependency>
            <groupId>com.alibaba.cloud</groupId>
            <artifactId>spring-cloud-starter-alibaba-nacos-discovery</artifactId>
        </dependency>

        <!-- SpringCloud Alibaba Nacos Config -->
        <dependency>
            <groupId>com.alibaba.cloud</groupId>
            <artifactId>spring-cloud-starter-alibaba-nacos-config</artifactId>
        </dependency>

        <!-- SpringBoot Actuator -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <!-- Apache Velocity -->
        <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>velocity-engine-core</artifactId>
        </dependency>

        <!-- 实现数据库文档 -->
        <dependency>
            <groupId>cn.smallbun.screw</groupId>
            <artifactId>screw-core</artifactId>
        </dependency>


        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-sentinel</artifactId>
        </dependency>

        <!-- erahub Common Log -->
        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-log</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-dict</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-doc</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-web</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-mybatis</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-dubbo</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-seata</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-oss</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-mail</artifactId>
        </dependency>

        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-common-sms</artifactId>
        </dependency>

        <!-- erahub Api Base -->
        <dependency>
            <groupId>com.erahub</groupId>
            <artifactId>erahub-api-base</artifactId>
        </dependency>


        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
